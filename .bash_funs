# quick way to view csv files
function csv { column -s, -t < "$1" | less -#2 -N -S; }
export -f csv

# template for a notes repository
function getnotes { curl -L https://api.github.com/repos/zkamvar/notes-template/tarball \
| tar --strip-components=1 -xzv \
--exclude=README.md \
--exclude=LICENSE \
--exclude=flow.png \
--exclude=.gitignore; }
export -f getnotes

# set theme
function theme { KITTY_CONFIG_DIRECTORY="${2:-~/.config/kitty/ignore/}" kitty +kitten themes ${1}; }
export -f theme

function hex2rgb () {
  hex="${1/\#/}" # remove leading hash
  printf "${hex}\n"
  r=0x${hex:0:2}
  g=0x${hex:2:2}
  b=0x${hex:4:2}
  printf "%d %d %d\n" ${r} ${g} ${b}
}

function luminance () {
  v=$( echo "${1}/255" | bc -l )
  if [ $( echo "${v} < 0.03298" | bc -l ) -eq 1 ]; then
     v=$(echo "${v}/12.92" | bc -l)
  else
     v=$( echo "((${v} + 0.055)/1.055)^2" | bc -l )
  fi
  echo "$v"
}
